<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="820dp"
    android:paddingTop="16dp"
    tools:context=".splash2"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:background="@color/white"
    android:weightSum="1">

    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Deep Awake는"
        android:textSize="36dp"
        android:textStyle="bold"/>


    <TextView
        android:textColor="@color/black"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="당신의 운전중 뇌파를 측정합니다"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:text="졸음이 측정되는 순간 깨워드립니다."/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="졸음 환경을 한눈에 보실 수 있습니다"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:text="졸음 시의 날짜, 위치, 날씨 및 대기오염을 제공해드립니다."/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="현재 위치에서 가까운\n졸음 쉼터로 안내해줍니다"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textAlignment="center"
        android:text="보호자에게 운전자의 졸음상태를\n문자로 즉시 알려줍니다"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:text="졸음 운전 기록을 카카오톡으로 공유할 수 있습니다"/>


    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_marginVertical="15dp">

        <Button
            android:id="@+id/bt_splashNext2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrownext_foreground" />

    </RelativeLayout>

</LinearLayout>
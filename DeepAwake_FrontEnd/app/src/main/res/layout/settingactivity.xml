<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/userinfor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="22dp"
        android:gravity="left"
        android:orientation="horizontal"
        android:background="@drawable/weather_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reporttop">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginVertical="15dp"
            app:srcCompat="@mipmap/setting_white"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="15dp"
            android:text="사용자 정보"
            android:textColor="#FFFFFF"
            android:textSize="24sp"/>
    </LinearLayout>

<!--    회원정보등 -->
    <LinearLayout
        android:id="@+id/reporttop"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:outlineAmbientShadowColor="@color/purple_700"
        android:outlineSpotShadowColor="#3F51B5"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/logowhite" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="My Page"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--    /logo다음-->
    <LinearLayout
        android:id="@+id/mypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:gravity="left"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reporttop">

        <View
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:background="#FF203293" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/icon_security"
            android:drawablePadding="20dip"
            android:text="회원 정보"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#504E48"
            android:textSize="18sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:background="#FF203293" />

        <TextView
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/icon_notice"
            android:drawablePadding="20dip"
            android:text="공지사항"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#504E48"
            android:textSize="18sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:background="#FF203293" />

        <TextView
            android:id="@+id/appinfor"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/icon_infor"
            android:drawablePadding="20dip"
            android:text="앱 정보"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#504E48"
            android:textSize="18sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:background="#FF203293" />

        <TextView
            android:id="@+id/mailto"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/icon_mail"
            android:drawablePadding="20dip"
            android:text="개발자에게 메일"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#504E48"
            android:textSize="18sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:background="#FF203293" />

        <TextView
            android:id="@+id/w_review"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginVertical="15dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/icon_write"
            android:drawablePadding="20dip"
            android:text="리뷰작성"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#504E48"
            android:textSize="18sp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:background="#FF203293" />

    </LinearLayout>

    <!--    시작-->

    <!--  아래바  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/Home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:backgroundTint="#000000"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/home_edge"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/Report"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintLeft_toRightOf="@id/Home"
            app:layout_constraintRight_toLeftOf="@id/Map"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_report"
            tools:ignore="MissingConstraints" />


        <ImageButton
            android:id="@+id/Map"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="-1dp"
            android:backgroundTint="#000000"
            app:layout_constraintLeft_toRightOf="@id/Report"
            app:layout_constraintRight_toLeftOf="@id/Music"
            app:srcCompat="@mipmap/map"
            tools:ignore="MissingConstraints" />


        <ImageButton
            android:id="@+id/Music"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="1dp"
            android:backgroundTint="#000000"
            app:layout_constraintLeft_toRightOf="@id/Map"
            app:layout_constraintRight_toLeftOf="@id/Setting"
            app:srcCompat="@drawable/alarm"
            tools:ignore="MissingConstraints" />

        <ImageButton
            android:id="@+id/Setting"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="-1dp"
            android:backgroundTint="#000000"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@mipmap/setting_white"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="#008000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/road_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="road_type"
            android:textColor="#008000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/road_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="road_route_name"
            android:textColor="#008000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="latitude"
            android:textColor="#008000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="longitude"
            android:textColor="#008000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/gas_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gas_station"
            android:textColor="#008000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/lpg_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lpg_charge"
            android:textColor="#008000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/electric_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="electric_charge"
            android:textColor="#008000"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone number"
            android:textColor="#008000"
            android:textSize="20sp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>